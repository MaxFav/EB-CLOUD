<odoo>
    <data>

        <record id="product_template_view_form_inherit_eb_product_form" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit.eb_product_form</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='product_tooltip']" position="replace"/>
                <xpath expr="//label[@for='product_tooltip']" position="replace"/>
                <xpath expr="//div[hasclass('fst-italic')][2]" position="replace"/>
                <xpath expr="//field[@name='product_tooltip']" position="replace"/>

                <xpath expr="//form[@name='Product Template']/sheet[@name='product_form']/notebook[1]/page[@name='general_information']/group[1]/group[@name='group_general']/div[1]" position="after">
                    <field name="x_studio_brand_owner"/>
                    <xpath expr="//field[@name='categ_id']" position="move"/>
                    <field name="x_studio_product_category_type"/>
                    <field name="x_studio_metal_material"/>
                    <field name="x_studio_master_number" widget="char"/>
                    <xpath expr="//field[@name='default_code']" position="move"/>
                    <xpath expr="//field[@name='barcode']" position="move"/>
                    <field name="x_studio_lifecycle" string="Lifecycle"/>
                </xpath>

                <xpath expr="//label[@for='list_price']" position="before">
                    <field name="gbp_rrp" on_change="1"/>                    
                </xpath>

                <xpath expr="//field[@name='taxes_id']" position="after">
                    <field name="x_studio_costing_estimate_landed"/>
                </xpath>

                <xpath expr="//form[@name='Product Template']/sheet[@name='product_form']/notebook[1]/page[@name='general_information']/group[1]" position="after">
                    <group>
                        <group name="group_additional_info" string="Additional Info"/>
                    </group>
                </xpath>

                <xpath expr="//group[@name='group_additional_info']" position="inside">
                    <xpath expr="//field[@name='detailed_type']" position="move"/>
                    <xpath expr="//field[@name='invoice_policy']" position="move"/>
                    <xpath expr="//field[@name='expense_policy']" position="move"/>
                    <xpath expr="//field[@name='company_id']" position="move"/>
                </xpath>

                <xpath expr="//page[@name='invoicing']" position="after">
                    <page string="Merchandising" name="merchandising"></page>
                    <page string="Packaging" name="packaging"></page>
                    <page string="Customer Information" name="customers"></page>
                    <page string="Prices" name="prices"></page>
                </xpath>                
            </field>
        </record>
               
    </data>
</odoo>