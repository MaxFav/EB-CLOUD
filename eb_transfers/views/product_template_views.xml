<odoo>
    <data>

        <record id="product_template_view_form_inherit_eb_product_form" model="ir.ui.view">
            <field name="name">product.template.view.form.inherit.eb_product_form</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='product_tooltip']" position="replace"/>
                <xpath expr="//label[@for='product_tooltip']" position="replace"/>
                <xpath expr="//div[hasclass('fst-italic')][2]" position="replace"/>
                <xpath expr="//field[@name='product_tooltip']" position="replace"/>

                <xpath expr="//form[@name='Product Template']/sheet[@name='product_form']/notebook[1]/page[@name='general_information']/group[1]/group[@name='group_general']/div[1]" position="after">
                    <field name="x_studio_brand_owner"/>
                    <xpath expr="//field[@name='categ_id']" position="move"/>
                    <field name="x_studio_product_category_type"/>
                    <field name="x_studio_metal_material"/>
                    <field name="x_studio_master_number" widget="char"/>
                    <xpath expr="//field[@name='default_code']" position="move"/>
                    <xpath expr="//field[@name='barcode']" position="move"/>
                    <field name="x_studio_read_only_lifecycle" string="Lifecycle"/>
                </xpath>

                <xpath expr="//label[@for='list_price']" position="before">
                    <field name="gbp_rrp" on_change="1"/>                    
                </xpath>

                <xpath expr="//field[@name='taxes_id']" position="after">
                    <field name="x_studio_costing_estimate_landed"/>
                </xpath>

                <xpath expr="//form[@name='Product Template']/sheet[@name='product_form']/notebook[1]/page[@name='general_information']/group[1]" position="after">
                    <group>
                        <group name="group_additional_info" string="Additional Info"/>
                    </group>
                </xpath>

                <xpath expr="//group[@name='group_additional_info']" position="inside">
                    <xpath expr="//field[@name='detailed_type']" position="move"/>
                    <xpath expr="//field[@name='invoice_policy']" position="move"/>
                    <xpath expr="//field[@name='expense_policy']" position="move"/>
                    <xpath expr="//field[@name='company_id']" position="move"/>
                </xpath>

                <xpath expr="//page[@name='invoicing']" position="after">
                    <page string="Merchandising" name="merchandising"></page>
                    <page string="Packaging" name="packaging"></page>
                    <page string="Customer Information" name="customer"></page>
                    <page string="Prices" name="prices"></page>
                </xpath>
                
                <xpath expr="//page[@name='merchandising']" position="inside">
                    <group>
                        <group string="EB Merch" name="group_eb_merch">
                            <field name="x_studio_field_RpSzy"/>
                            <field name="x_studio_lifecycle" string="Lifecycle"/>                           
                            <field name="x_studio_developed_for"/>
                            <field name="x_studio_usa_lifecycle"/>
                            <field name="x_studio_catalogue_uk_live"/>
                            <field name="x_studio_catalogue_us_live"/>
                            <field name="x_studio_web_sale"/>
                            <field name="x_studio_ecom_merch"/>
                        </group>
                        <group string="Key Accounts" name="group_key_accounts">
                            <field name="x_studio_read_only_jlp_status"/>
                            <field name="x_studio_read_only_waitrose_status"/>
                            <field name="x_studio_read_only_dfs_range_status"/>
                            <field name="x_studio_read_only_setur_range_status"/>
                        </group>
                    </group>
                    <group>
                        <group string="Marketplace" name="group_marketplace">
                            <field name="x_studio_boolean_field_EuDrs"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//page[@name='packaging']" position="inside">
                    <group>
                        <group name="group_packaging_left">
                            <field name="x_studio_message"/>
                            <field name="x_studio_message_card_code"/>
                            <field name="x_studio_field_hy996"/>
                            <field name="x_studio_outer_box"/>
                        </group>
                        <group name="group_packaging_right">
                            <field name="x_studio_coo_for_custom"/>
                            <field name="x_studio_packaging_image" widget="image" options="{'size':[0,90]}"/>
                        </group>
                    </group>
                </xpath>

                <xpath expr="//page[@name='customer']" position="inside">
                    <group>
                        <group name="group_customer_information_left">
                            <field name="x_studio_jlp_status"/>
                        </group>
                        <group name="group_customer_information_right">
                            <field name="x_studio_avolta_product_reference_1" string="Avolta Product Ref"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
               
    </data>
</odoo>