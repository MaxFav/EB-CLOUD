<odoo>
    <data>
        <record id="stock_picking_view_form_inherit_add_warehouse" model="ir.ui.view">
            <field name="name">stock.picking.view.form.inherit.add_warehouse</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <xpath expr="//form/field" position="before">
                    <field name="x_studio_warehouse" invisible="1"/>
                </xpath>
            </field>
        </record>

        <record id="stock_picking_view_form_inherit_add_conditional_lifecycle" model="ir.ui.view">
            <field name="name">stock.picking.view.form.inherit.add_conditional_lifecycle</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="model">stock.picking</field>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook/page[@name='operations']/field/tree/field[@name='product_id']" position="after">
                    <field name="x_studio_uk_lifecycle" string="UK Lifecycle"/>
                    <field name="x_studio_usa_cycle" string="USA Lifecycle"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>