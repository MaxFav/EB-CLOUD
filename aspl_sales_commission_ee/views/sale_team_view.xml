<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="aspl_inherit_view_res_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet/notebook" position="inside">
                    <page string="Sales Commission">
                        <field name="comm_ids">
                            <tree editable="bottom">
                                <field name="job_id" invisible="1"/>
                                <field name="user_ids" string="Payable To" widget="many2many_tags"
                                    options="{'no_create': True}" domain="[('is_sales_agent', '=', True)]"/>
                                <field name="compute_price_type"/>
                                <field name="commission"/>
                                <field name="partner_id" invisible="1"/>
                                <field name="commission_pay_on" />
                                <field name="commission_pay_by" />
                                <field name="commission_account_id" />
                            </tree>
                        </field>
                    </page>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                	<field name="is_sales_agent" attrs="{'invisible': [('user_ids','=', [])]}"/>
            	</xpath>
            </field>
        </record>
        
        <record id="res_partner_view_search_inherit_estella" model="ir.ui.view">
	        <field name="name">res.partner.view.search.inherit.estella</field>
	        <field name="model">res.partner</field>
	        <field name="inherit_id" ref="base.view_res_partner_filter"/>
	        <field name="arch" type="xml">
	            <filter name="inactive" position="after">
	                <separator />
	                <filter string="Users/Agents" name="users_agents"
	                        domain="[('user_ids', '!=', False)]"/>
	                <separator/>
	            </filter>
	        </field>
    	</record>

        <record id="aspl_inherit_crm_team_view_form" model="ir.ui.view">
            <field name="name">crm.team.form</field>
            <field name="model">crm.team</field>
            <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet//notebook//page[@name='members']" position="after">
                    <page string="Sales Commission" name="sale_commission">
                        <field name="sale_team_comm_ids">
                            <tree editable="bottom">
                                <field name="job_id"/>
                                <field name="user_ids" widget="many2many_tags" context="{'ctx_job_id': job_id}"
                                    options="{'no_create': True}"/>
                                <field name="compute_price_type"/>
                                <field name="commission"/>
                                <field name="sale_team_id" invisible="1"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>