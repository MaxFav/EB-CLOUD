<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sh_pos_default_customer_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sh_pos_default_customer</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <div id="pos_interface_section" position="after">
                <h2 class="mt16" id='sh_pos_default_customer'>Customer Selection</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="pos_sh_enable_default_customer" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="pos_sh_enable_default_customer" />
                        </div>
                    </div>
                    <div class="col-xs-6 col-md-6 o_setting_box">
                        <div style="width:200px">
                            <label for="pos_sh_default_customer_id" attrs="{'invisible': [('pos_sh_enable_default_customer', '!=', True)]}" />
                        </div>
                        <div class="o_setting_right_pane">
                            <field name="pos_sh_default_customer_id" attrs="{'invisible': [('pos_sh_enable_default_customer', '!=', True)], 'required' :[ ('pos_sh_enable_default_customer', '=', True)]}" />
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
