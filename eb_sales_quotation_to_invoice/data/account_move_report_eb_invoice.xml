<odoo>
    <data>
        <template id="report_eb_invoice">
            <t t-name="web.html_container">
                <t t-foreach="doc" t-as="o">
                    <t t-call="web.basic_layout">                                       
                        <div class="page">
                            <div class="row">
                                <div class="col-6">
                                    <span t-field="o.company_id.logo" t-options-widget="image" t-options-qweb_img_raw_data="1" style="width:149px;display:inline-block"/>
                                </div>
                                <div class="col-6 text-end">
                                    <strong>Estella Bartlett Ltd</strong>
                                    <span t-field="o.company_id.company_details"/>
                                </div>
                            </div>
                            
                            <div class="row mt-4">
                                <div class="col-6">
                                    <strong t-if="o.partner_shipping_id">Shipping Address:</strong>
                                    <address class="mb-0" t-field="o.partner_shipping_id" t-options="{widget: contact, fields: [address, phone], no_marker: True, 'phone_icons': True}"/>
                                </div>
                                <div class="col-6">
                                    <strong>Customer:</strong>
                                    <address class="mb-0" t-field="o.partner_id" t-options="{widget: contact, fields: [address, phone], no_marker: True, 'phone_icons': True}"/>
                                </div>
                            </div>
                        
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>