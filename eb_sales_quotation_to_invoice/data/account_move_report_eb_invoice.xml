<odoo>
    <data>
        <template id="report_eb_invoice">
            <t t-foreach="doc" t-as="o">
                <t t-call="web.basic_layout">
                    <t t-set="o" t-value="o.with_context(lang=lang)"/>
                    <div class="page mt-4">
                        <div class="row">
                            <div class="col-6">
                                <span t-field="o.company_id.logo" t-options-widget="&quot;image&quot;" t-options-qweb_img_raw_data="1" style="width:149px;display:inline-block"/>
                            </div>
                            <div class="col-6 text-end">
                                <strong>Estella Bartlett Ltd</strong>
                                <span t-field="o.company_id.company_details"/>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong t-if="o.partner_shipping_id">Shipping Address:</strong>
                                <address class="mb-0" t-field="o.partner_shipping_id" t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True, 'phone_icons': True}"/>
                            </div>
                            <div class="col-6">
                                <strong>Customer:</strong>
                                <address class="mb-0" t-field="o.partner_id" t-options="{'widget': 'contact', 'fields': ['address', 'name', 'phone'], 'no_marker': True, 'phone_icons': True}"/>
                            </div>
                        </div>
                    
                        <h1 class="mt-4">
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoic</span>
                            <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                            <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                            <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                            <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                            <span t-if="o.name != '/'" t-field="o.name"/>
                        </h1>
                      
                        <div class="row mb-4">
                            <div class="col-auto col-2 mw-100" t-if="o.invoice_date" name="invoice_date">
                                <t t-if="o.move_type == 'out_invoice'"><strong>Invoice Date:</strong></t>
                                <t t-else=""><strong>Date:</strong></t>
                                <p class="m-0" t-field="o.invoice_date"/>
                            </div>
                            <div class="col-auto col-2 mw-100" t-if="o.move_type == 'out_invoice'" name="due_date">
                                <strong>Due Date:</strong>
                                <p class="m-0" t-field="o.invoice_date_due"/>
                            </div>
                            <div class="col-auto col-2 mw-100" t-if="o.invoice_origin" name="origin">
                                <strong>Source:</strong>
                                <p class="m-0" t-field="o.invoice_origin"/>
                            </div>
                            <div class="col-auto col-6 mw-100" t-if="o.ref" name="reference">
                                <strong>Reference:</strong>
                                <p class="m-0" t-field="o.ref"/>
                            </div>
                        </div>
                      
                        <t t-set="display_discount" t-value="any(l.discount for l in o.invoice_line_ids)"/>
                      
                        <table class="table o_main_table table-bordered" name="invoice_line_table">
                            <thead>
                                <tr>
                                    <th name="th_description" class="text-start"><span>DESCRIPTION</span></th>
                                    <th name="th_quantity" class="text-center" style="width:60px"><span>QTY</span></th>
                                    <th name="th_priceunit" class="text-center" style="width:105px"><span>UNIT PRICE</span></th>
                                    <th name="th_price_unit" t-if="display_discount" class="text-center"><span>DISC(%)</span></th>
                                    <th name="th_taxes" class="text-center" style="width:60px"><span>TAXES</span></th>
                                    <th name="th_subtotal" class="text-end" style="width:90px"><span>AMOUNT</span></th>
                                </tr>
                            </thead>
                        
                            <tbody>
                                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-foreach="lines" t-as="line">
                                    <tr class="small">
                                        <t t-if="line.display_type == 'product'" name="account_invoice_line_accountable">
                                            <td name="td_name"><span t-field="line.product_id.display_name"/></td>
                                            <td class="text-center"><span t-field="line.quantity"/></td>
                                            <td class="text-center"><span t-field="line.price_unit"/></td>
                                            <td class="text-center" t-if="display_discount"><span t-field="line.discount"/></td>
                                            <td class="text-center"><span t-out="', '.join(map(lambda x: (x.invoice_label or x.name), line.tax_ids))" id="line_tax_ids"/></td>
                                            <td class="text-end"><span t-field="line.price_subtotal"/></td>
                                        </t>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                      
                        <div class="row">
                            <div class="col-5"/>
                            <div class="col-5 offset-2">
                                <table class="table table-sm">
                                    <t t-set="tax_totals" t-value="o.tax_totals"/>
                                    <t t-call="account.document_tax_totals"/>
                                </table>
                            </div>
                        </div>
                      
                        <div class="mt-4">
                            <span>Please use the following communication for you payment:</span>
                            <strong t-field="o.name"/>
                         </div>
                      
                        <div class="mt-2">
                            <span>Payment Terms:</span>
                            <span t-field="o.invoice_payment_term_id"/>
                        </div>
                      
                        <div class="mt-4"><strong>Bank Account Details:</strong></div>
                        <div><span t-field="o.currency_id.x_studio_bank_account_information"/></div>
                      
                        <div class="mt-4">
                            <div t-field="o.company_id.invoice_terms"/>
                        </div>                      
                    </div> 
                </t>
            </t>
        </template>
    </data>
</odoo>