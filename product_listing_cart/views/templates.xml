<odoo>
    <data>
    
        <template id="product_listing_add_quantity_cart" inherit_id="website_sale.products_item" name="add product quantity cart" active="True">
            <xpath expr="//div[hasclass('o_wsale_product_sub')]" position="inside">
                <div class="css_quantity input-group" contenteditable="false">
                    <a t-attf-href="#" class="btn btn-secondary js_add_cart_json" aria-label="Remove one" title="Remove one">
                        <i class="fa fa-minus"></i>
                    </a>
                    <input type="text" class="form-control quantity text-center" data-min="1" name="add_qty" t-att-value="5" />
                    <a t-attf-href="#" class="btn btn-secondary float_left js_add_cart_json" aria-label="Add one" title="Add one">
                        <i class="fa fa-plus"></i>
                    </a>  
                    <a href="#" id="add_to_cart" role="button" class="btn btn-primary a-submit" aria-label="Shopping Cart">
                        <span class="fa fa-shopping-cart"></span>
                    </a>                                  
                </div>                
            </xpath>
        </template>

        <template id="product_list_code" inherit_id="website_sale.products_item" active="True" name="Product List Code">
            <xpath expr="//*[hasclass('o_wsale_products_item_title')]" position="after">
                <div class="oe_subdescription text-muted small" contenteditable="false">
                    <div itemprop="description" t-field="product.default_code"/>
                </div>
            </xpath>
        </template>

        <template id="product_list_metal" inherit_id="website_sale.products_item" active="True" name="Product List Metal">
            <xpath expr="//*[hasclass('o_wsale_products_item_title')]" position="after">
                <div class="oe_subdescription text-muted small" contenteditable="false">
                    <div itemprop="description" t-field="product.x_studio_metal_material"/>
                </div>
            </xpath>
        </template>     

        <template id="product_code" inherit_id="website_sale.product" active="True" name="Product Code">
            <xpath expr="//h1" position="after">
                <div class="oe_subdescription" contenteditable="false">
                    <div itemprop="description" t-field="product.default_code"/>
                </div>
            </xpath>
        </template>

        <template id="product_metal" inherit_id="website_sale.product" active="True" name="Product Metal">
            <xpath expr="//h1" position="after">
                <div class="oe_subdescription" contenteditable="false">
                    <div itemprop="description" t-field="product.x_studio_metal_material"/>
                </div>                
            </xpath>
        </template>
       

    </data>
</odoo>