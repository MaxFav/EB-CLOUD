<odoo>
	<data noupdate="1">
		 <record model="product.product" id="smart_mtd.rc_eu_sale_product">
	    	<field name="name">RCEU Sale</field>
	    	<field name="type">service</field>
	    	<field name="taxes_id" eval="[(6, 0, [ref('smart_mtd.RC_Output_EC')])]"/>
	    	<field name="sale_ok">True</field>
	    	<field name="purchase_ok">False</field>
	    </record>
	    
	    <record model="product.product" id="smart_mtd.rc_eu_purchase_product">
	    	<field name="name">RCEU Purchase</field>
	    	<field name="type">service</field>
	    	<field name="supplier_taxes_id" eval="[(6, 0, [ref('smart_mtd.RC_Input_EC')])]"/>
	    	<field name="taxes_id" eval="False"/>
	    	<field name="sale_ok">False</field>
	    	<field name="purchase_ok">True</field>
	    </record>
	    
	    <record model="product.product" id="smart_mtd.rc_uk_sale_product">
	    	<field name="name">RCUK Sale</field>
	    	<field name="type">service</field>
	    	<field name="taxes_id" eval="[(6, 0, [ref('smart_mtd.RC_Output_UK')])]"/>
	    	<field name="sale_ok">True</field>
	    	<field name="purchase_ok">False</field>
	    </record>
	    
	    <record model="product.product" id="smart_mtd.rc_uk_purchase_product">
	    	<field name="name">RCUK Purchase</field>
	    	<field name="type">service</field>
	    	<field name="supplier_taxes_id" eval="[(6, 0, [ref('smart_mtd.RC_Input_UK')])]"/>
	    	<field name="taxes_id" eval="False"/>
	    	<field name="sale_ok">False</field>
	    	<field name="purchase_ok">True</field>
	    </record>
	    
	    <record model="product.product" id="smart_mtd.import_vat_product">
	    	<field name="name">Import VAT Product</field>
	    	<field name="type">service</field>
	    	<field name="supplier_taxes_id" eval="[(6, 0, [ref('smart_mtd.Import_VAT')])]"/>
	    	<field name="taxes_id" eval="False"/>
	    	<field name="sale_ok">False</field>
	    	<field name="purchase_ok">True</field>
	    </record>
	        
	</data>
</odoo>