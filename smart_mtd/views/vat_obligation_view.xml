<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="hmrc_vat_obligation_form_mtd" model="ir.ui.view">
            <field name="name">HMRC MTD VAT Obigations MTD</field>
            <field name="model">l10n_uk.vat.obligation</field>
            <field name="inherit_id" ref="l10n_uk_reports.hmrc_vat_obligation_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="submission_message" readonly="1"/>
                    <field name="report_attachment_name" invisible="1"/>
                    <field name="report_attachment_id" filename="report_attachment_name"
                           attrs="{'invisible': [('report_attachment_id', '=', False)]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>