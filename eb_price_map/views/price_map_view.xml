<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="price_map_view_tree" model="ir.ui.view">
            <field name="name">price.map.view.tree</field>
            <field name="model">price.map</field>
            <field name="arch" type="xml">
                <tree editable="top">
                    <field name="id"/>
                    <field name="gbp"/>
                    <field name="eur"/>
                    <field name="usd"/>
                    <field name="aud"/>
                    <field name="cad"/>
                </tree>
            </field>
        </record>

        <record id="price_map_action" model="ir.actions.act_window" >
            <field name="name">Price Map</field>
            <field name="res_model">price.map</field>
            <field name="view_mode">tree</field>
        </record>

        <menuitem id="price_map_menu_action"
            name="Price Map"
            action="price_map_action"
            parent="sale.product_menu_catalog"
            sequence="15"
        />
    </data>
</odoo>
