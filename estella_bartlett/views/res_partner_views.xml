<odoo>

    <record id="res_partner_form_view_naturiste" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='website']" position="after">
                <field name="territory_id" />
                <field name="sales_channel_ids" widget="many2many_tags" />
            </xpath>
            <xpath expr="//group[@name='sale']/field[@name='user_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <page name="sales_purchases" position="after">
                <page string="Inventory" name="inventory">
                    <group name="warehouse">
                        <field name="x_studio_field_EpOAQ"/>
                    </group>
                </page>
            </page>
        </field>
    </record>
</odoo>
