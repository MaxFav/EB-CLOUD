<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="payment_wizard" model="ir.ui.view">
        <field name="name">Payment Wizard</field>
        <field name="model">payment.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Purchase Order: Payment Wizard">
                <field name="purchase_order_id" invisible="1"/>
                <group string="Payment IDs">
                    <field name="payment_ids" nolabel="1" readonly="True">
                        <tree create="0" editable="bottom" delete="false">
                            <field name="payment_type"/>
                            <field name="reconciled_move_lines_debit_total"/>
                            <field name="unreconciled_move_lines_debit_total"/>
                            <field name="amount" string="Payment Total Amount"/>
                            <field name="journal_id"/>
                            <field name="payment_method_id"/>
                            <field name="payment_date"/>
                            <field name="state"/>
                        </tree>
                    </field>
                </group>
                <button class="btn-default" type="object" name="button_new_payment" string="NEW PAYMENT"/>
                <footer>
                    <button class="btn-primary" type="object" name="button_save" string="Save"/>
                    <button string="DISCARD" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>